= form_for [ @argument.procedure, @argument ] do |f|
  - if @argument.errors.any?
    #error_explanation
      %h2
        = @argument.errors.count
        = t '.error_message'
      
      %ul
        - @argument.errors.full_messages.each do |message|
          %li= message
        
      
    
  
  = f.hidden_field :kind
  
  .field
    = f.label :title, t( 'labels.title' )
    = f.text_field :title, autofocus: true, placeholder: t( 'labels.short_summary' )
  
  .field
    = f.label :description, t( 'labels.description' )
    = render 'general/field_markdown'
    = f.text_area :description, rows: 8, placeholder: t( 'labels.description_placeholder' )
  
  .actions
    = f.submit t( 'actions.save' ), class: 'button'
  

