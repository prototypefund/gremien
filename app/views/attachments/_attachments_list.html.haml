%ul.attachments_list
  - attachments.each do |attachment|
    %li
      - if attachment.is_file?
        = link_to attachment.file.url, class: 'attachment', target: '_blank' do
          = image_tag 'sym/document_s100.svg', class: 'icon'
          = attachment.title_text
        
      - elsif attachment.is_url?
        = link_to attachment.url, class: 'attachment', target: '_blank' do
          = image_tag 'sym/document_s100.svg', class: 'icon'
          = attachment.title_text
        
      
      - if h_visitor_owns? attachment
        .attachment_actions
          = link_to t( '.delete' ), attachment, method: :delete, confirm: "Wollen Sie die angehängte Datei '#{attachment.title}' wirklich löschen?\n\nDie Aktion kann nicht rückgängig gemacht werden.", class: 'attachment_action'
        
      
    
  

