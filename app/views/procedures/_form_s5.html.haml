- first = h_partial_init first, false

%h5 Schritt 5: ModeratorInnen

= render 'moderatorships/list', moderatorships: procedure.moderatorships

= form_for procedure do |f|
  - if procedure.errors.any?
    #error_explanation
      %h2
        = procedure.errors.count
        Fehler verhindern, dass dieses Mitwirkungsforum erzeugt werden kann:"
      %ul
        - procedure.errors.full_messages.each do |message|
          %li= message
        
      
    
  .field
    = f.label :mod_email, "Liste #{procedure.moderatorships.size > 0 ? ' weitere' : ''} E-Mail Adressen"
    = f.text_area :mod_emails, rows: 5, placeholder: 'E-Mail Adressen eingeben, getrennt durch Komma oder Leerzeichen...'
  
  .actions
    = f.submit t( 'actions.save' ), class: 'button'
  

